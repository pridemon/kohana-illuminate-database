{
	"name":        "pridemon/kohana-illuminate-database",
	"type":        "kohana-module",
	"description": "Kohana Illuminate database module",
	"license":     "BSD-3-Clause",
	"keywords":    ["kohana", "framework", "ORM", "database", "Laravel"],
	"authors": [
		{
			"name":     "Ilya Gudkov",
			"email":    "pridemon@yandex.ru",
			"role":     "developer"
		}
	],
	"require": {
		"composer/installers": "~1.0",
		"illuminate/database": "5.0.*@dev",
        "illuminate/filesystem": "5.0.*@dev",
		"php":                 ">=5.4.0"
	},
    "require-dev": {
        "kohana/core":         "3.3.*@dev",
        "kohana/database":     "3.3.*@dev",
        "kohana/unittest":     "3.3.*@dev",
        "kohana/koharness":    "*@dev"
    },
	"extra": {
		"branch-alias": {
			"dev-3.3/develop": "3.3.x-dev",
			"dev-3.4/develop": "3.4.x-dev"
        },
        "installer-paths": {
            "vendor/{$vendor}/{$name}": ["type:kohana-module"]
        }
	}
}
